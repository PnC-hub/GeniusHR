# GeniusHR Backup Configuration
# Copy this file to ../app/.env and add these variables

# Database connection (already in .env)
# DATABASE_URL="postgresql://user:password@host:5432/database"

# Backup directory (absolute path)
# Default: /path/to/GeniusHR/backups
BACKUP_DIR=/var/backups/geniushr

# Retention policy (days)
# Backups older than this will be deleted automatically
BACKUP_RETENTION_DAYS=30

# Email notifications (optional)
# Leave empty to disable notifications
BACKUP_NOTIFY_EMAIL=admin@geniushr.it

# SendGrid API key for email notifications (optional)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
